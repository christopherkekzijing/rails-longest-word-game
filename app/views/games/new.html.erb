<div class="container">
  <h1>New Game</h1>
  <div class="letters">
  <%@letters.each do |letter| %>
  <div class="letter"><%= letter.upcase %></div>
  <% end %>
</div>
<p>what is the longest word you can find?</p>
  <form action="/score" method="get">
    <input type="text" name="answer">
    <input type="submit">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :rand_letters, @letters %>
  </form>
</div>


